[group:proxy]
programs={{ server_names | join(',') }}

{% for name in server_names %}
[program:{{ name }}]
user=www-data
directory={{ server_dir }}
command={{ server_dir }}/{{ name }} unix:{{ name }}.sock --web-hostname {{ hostname }} --web-address {{ nginx_listen }}
autostart=true
autorestart=true
startsecs=5
startretries=3

{% endfor %}
[program:haproxy]
command=/usr/sbin/haproxy -f {{ haproxy_cfg }} -p {{ haproxy_pid }} -n 50000 -N 50000
autostart=true
autorestart=true
startsecs=3
startretries=3

[program:memcached]
user=memcache
command=/usr/bin/memcached -l 127.0.0.1 -m {{ memcache_mem }}
autostart=true
autorestart=true
startsecs=3
startretries=3

[program:nginx]
user=www-data
command=/usr/sbin/nginx -g "daemon off;" -c {{ nginx_conf }}
autostart=true
autorestart=true
startsecs=3
startretries=3
